# Runtime
NODE_ENV=development
PORT=5000

# Delivery mode
# true  = acoplado (API também serve frontend)
# false = API standalone (frontend separado, ex: Netlify)
SERVE_CLIENT=true

# Frontend (opcional)
# Se definido, o frontend chama a API por URL absoluta.
# Ex: https://petcrushes-api.onrender.com
VITE_API_URL=

# CORS
# Lista de origens separadas por vírgula para modo separado.
# Ex: https://petcrushes.netlify.app,https://www.petcrushes.com
CORS_ORIGIN=

# Database (Neon Postgres)
DATABASE_URL=postgresql://USER:PASSWORD@HOST/DB_NAME?sslmode=require

# Session/Auth
SESSION_SECRET=change_me_to_a_long_random_secret
ISSUER_URL=https://replit.com/oidc
REPL_ID=your_replit_client_id

# Cloudinary (for next migration steps)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret
